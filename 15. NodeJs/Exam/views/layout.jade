doctype html
html
	head(lang='en')
		meta(charset='utf-8')
		title= title
		link(rel='stylesheet', href=publicPath('bower_components/bootstrap/dist/css/bootstrap.css'))
		link(rel='stylesheet', href=publicPath('bower_components/bootstrap/dist/css/bootstrap-theme.css'))

		script(src=publicPath('bower_components/jquery/dist/jquery.js'))
		script(src=publicPath('bower_components/bootstrap/dist/js/bootstrap.js'))
	body
		nav.navbar.navbar-default: .container-fluid
			.navbar-header
				a.navbar-brand(href='/')= title
				button.navbar-toggle.collapsed(type='button', data-toggle='collapsed')
					.icon-bar
					.icon-bar
					.icon-bar
			#navigation.navbar-collapse.collapse
				ul.nav.navbar-nav
					li: a(href='/') Home
					li: a(href='/login') Login
					li: a(href='/register') Register
					li: a(href='/test') Test

					if user
						li: a(href='/profile') Profile
						li: a(href='/playlists/create') Create Playlist
			if user
				form#logout.pull-right(action='/logout', method='post')
					span=user.username
					input.form-control.btn.btn-primary(type='submit', value='logout')

		.container
			block content
		footer #{title}&copy;